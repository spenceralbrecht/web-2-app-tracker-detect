<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/md_theme_dark_surface"
        android:padding="24dp">

        <!-- Alert Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1AFF6B6B"
            app:strokeWidth="1dp"
            app:strokeColor="#FF6B6B"
            android:layout_marginBottom="16dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_step3_us_federal_data"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:textColor="#FF6B6B"
                    android:textStyle="bold"
                    android:alpha="0.95"
                    android:layout_marginBottom="8dp"/>
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_step3_chart_title"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Real-time Chart Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1A1A1A"
            app:strokeWidth="1dp"
            app:strokeColor="#333333">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Chart with Axes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <!-- Y-axis label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/onboarding_step3_reports_label"
                        android:textColor="#888888"
                        android:textSize="10sp"
                        android:layout_marginBottom="8dp"/>
                    
                    <com.dylan.airtag.detector.ui.onboarding.AnimatedLineChartView
                        android:id="@+id/lineChartView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:contentDescription="UK police tracker stalking reports chart"/>
                    
                    <!-- X-axis label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/onboarding_step3_years"
                        android:gravity="center"
                        android:textColor="#888888"
                        android:textSize="10sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Overlay Badge for Urgency -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="top|end"
                    android:layout_margin="16dp"
                    android:background="@drawable/rounded_corner_shape"
                    android:backgroundTint="#1AFF6B6B"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp">
                    
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="#FF3B30"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="6dp"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/onboarding_step3_official_data"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#FF6B6B"/>
                </LinearLayout>

                <!-- Bottom Info Message -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_step3_increase"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:background="#1A1A1A"
                    android:paddingVertical="12dp"
                    android:layout_gravity="bottom"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Statistics to Induce Fear -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_shape"
                android:backgroundTint="#1A1A1A"
                android:padding="12dp"
                android:layout_marginEnd="8dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_step3_stat1_number"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="#FF6B6B"
                    android:textStyle="bold"/>
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_step3_stat1_label"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textColor="#888888"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_shape"
                android:backgroundTint="#1A1A1A"
                android:padding="12dp"
                android:layout_marginStart="8dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_step3_stat2_number"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="#FF6B6B"
                    android:textStyle="bold"/>
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_step3_stat2_label"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textColor="#888888"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Clear CTA Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/onboarding_step3_button"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            app:cornerRadius="16dp"
            app:elevation="0dp"
            app:strokeWidth="0dp"/>


    </LinearLayout>
</layout>
